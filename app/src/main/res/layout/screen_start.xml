<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/txtSalom"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="42dp"
        android:src="@drawable/logoandroid"
        android:textColor="@color/txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="So`rovnomadan o`tishdan oldin  foydalanish shartlari bilan tanishib chiqishingizni so`rab qolamiz!"
        android:textSize="14dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/txtSalom"
       android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="22dp"
        android:layout_height="300dp"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/shapestart2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt2"
        app:layout_constraintTop_toBottomOf="@id/txt2">


        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/shape_start"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:text="Ushbu so`rovnoma Sizga, shifokor tavsiyasiga rioya qilish va davolanishga rioya qilishning o`ziga xos xususiyatlari bilan bog`liq bo`lgan kognitiv, emotsional, va xulq-atvor tarkibiy qisimlarini aniqlashga yordam beradigan 21 ta savoldan iborat. "
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_margin="12dp"/>

            </LinearLayout>



        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:id="@+id/btnStart"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="42dp"
        android:layout_marginHorizontal="22dp"
        android:background="@drawable/shape4"
        android:text="Boshlash"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18dp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/btnStart"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="12dp"
        android:text="Berilgan ma`lumot bilan tanishib chiqdim"
        android:textColor="#2B3454"
        android:textStyle="bold"
        android:id="@+id/checkbox"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ilova haqida"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp"
        android:textColor="@color/purple_200"
        android:background="?selectableItemBackground"
        android:id="@+id/btnAbout"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_info_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnAbout"
        android:layout_marginBottom="10dp"
        app:tint="@color/purple_200"
        android:layout_marginStart="4dp"
        android:padding="2dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>